ex:vocPanSlider a mb:Mapping ;
	mb:hasDimension [ a mb:MappingDimension ;
		mb:fromControl [ a mb:Slider ;
			rdfs:label "Voc pan" ] ;
		mb:hasMultiplier 10 ;
		mb:hasAddend -5 ] ;
	mb:toObject ex:voc ;
	mb:toParameter mb:Pan .
		
ex:riddimPanSlider a mb:Mapping ;
	mb:hasDimension [ a mb:MappingDimension ;
		mb:fromControl [ a mb:Slider ;
			rdfs:label "Riddim pan" ] ;
		mb:hasMultiplier 10 ;
		mb:hasAddend -5 ] ;
	mb:toObject ex:riddim ;
	mb:toParameter mb:Pan .

ex:panSlider a mb:Mapping ;
	mb:hasDimension [ a mb:MappingDimension ;
		mb:fromControl [ a mb:Slider ;
			rdfs:label "X Position" ] ;
		mb:hasMultiplier -10 ;
		mb:hasAddend 5 ] ;
	mb:toObject ex:mix ;
	mb:toParameter mb:Pan .
	
ex:distanceSlider a mb:Mapping;
	mb:hasDimension [ a mb:MappingDimension ;
		mb:fromControl [ a mb:Slider ;
			rdfs:label "Z Position" ] ;
		mb:hasMultiplier 10 ;
		mb:hasAddend -5 ] ;
	mb:toObject ex:mix ;
	mb:toParameter mb:Distance .

ex:orientationMapping a mb:Mapping ;
	mb:hasDimension [ a mb:MappingDimension ;
		mb:fromControl mb:CompassHeading ;
		mb:hasMultiplier -1 ;
		mb:hasModulus 360 ] ;
	mb:toParameter mb:ListenerOrientation .

ex:j4j a mb:Rendering ;
	mb:hasDMO ex:mix ;
	mb:hasMapping ex:vocPanSlider, ex:riddimPanSlider, ex:panSlider, ex:distanceSlider, ex:orientationMapping ;
	rdfs:label "Spatial Band Demo" .
