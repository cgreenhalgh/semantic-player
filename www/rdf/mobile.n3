#@base <http://purl.org/ontology/studio/mobile#> .
@prefix mo: <http://purl.org/ontology/mo/> .
@prefix mt: <http://purl.org/ontology/studio/multitrack#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix mb: <#> .


<#>
	a owl:Ontology;
	rdfs:comment "An ontology for describing playback rendering features on mobile devices" .

mb:Rendering
	a owl:Class;
	rdfs:subClassOf mt:MultitrackProject;
	rdfs:comment "" .

mb:Mapping
	a owl:Class;
	rdfs:comment "" . #make restriction to one dimension

mb:ProductMapping
	a owl:Class;
	rdfs:subClassOf mb:Mapping;
	rdfs:comment "Mapping that multiplies its dimensions" .

mb:SumMapping
	a owl:Class;
	rdfs:subClassOf mb:Mapping;
	rdfs:comment "Mapping that adds its dimensions" .

mb:MappingDimension
	a owl:Class;
	rdfs:comment "" .

mb:Function
	a owl:Class .

mb:LinearFunction
	a owl:Class;
	rdfs:subClassOf mb:Function .

mb:TriangleFunction
	a owl:Class;
	rdfs:subClassOf mb:Function .


#Controls

mb:MobileControl 
	a owl:Class;
	rdfs:comment "" .

mb:AccelerometerX
	a owl:Class;
	rdfs:subClassOf mb:MobileControl;
	rdfs:comment "" .
	
mb:AccelerometerY
	a owl:Class;
	rdfs:subClassOf mb:MobileControl;
	rdfs:comment "" .

mb:AccelerometerZ
	a owl:Class;
	rdfs:subClassOf mb:MobileControl;
	rdfs:comment "" .

mb:GeolocationLatitude
	a owl:Class;
	rdfs:subClassOf mb:MobileControl;
	rdfs:comment "" .

mb:GeolocationLongitude
	a owl:Class;
	rdfs:subClassOf mb:MobileControl;
	rdfs:comment "" .

mb:GeolocationDistance
	a owl:Class;
	rdfs:subClassOf mb:MobileControl;
	rdfs:comment "" .

mb:CompassHeading
	a owl:Class;
	rdfs:subClassOf mb:MobileControl;
	rdfs:comment "" .

mb:Slider
	a owl:Class;
	rdfs:subClassOf mb:MobileControl;
	rdfs:comment "" .

mb:Random
	a owl:Class;
	rdfs:subClassOf mb:MobileControl;
	rdfs:comment "" .


#Audio parameters

mb:Amplitude
	a owl:Class;
	rdfs:subClassOf mt:AutomationParameter;
	rdfs:comment "" .

mb:Pan
	a owl:Class;
	rdfs:subClassOf mt:AutomationParameter;
	rdfs:comment "" .

mb:Distance
	a owl:Class;
	rdfs:subClassOf mt:AutomationParameter;
	rdfs:comment "" .

mb:Reverb
	a owl:Class;
	rdfs:subClassOf mt:AutomationParameter;
	rdfs:comment "" .

mb:Onset
	a owl:Class;
	rdfs:subClassOf mt:AutomationParameter;
	rdfs:comment "" .

mb:Beat
	a owl:Class;
	rdfs:subClassOf mt:AutomationParameter;
	rdfs:comment "" .

mb:ListenerOrientation
	a owl:Class;
	rdfs:subClassOf mt:AutomationParameter;
	rdfs:comment "" .

#Other parameters

mb:StatsFrequency
	a owl:Class;
	rdfs:subClassOf mt:AutomationParameter;
	rdfs:comment "" .


#Properties

mb:hasMapping
	a owl:ObjectProperty, owl:AntisymmetricProperty;
	rdfs:domain mb:Rendering; 
	rdfs:range mb:Mapping;
	rdfs:comment "" .

mb:fromControl
	a owl:ObjectProperty, owl:AntisymmetricProperty;
	rdfs:domain mb:DirectMapping;
	rdfs:range mb:MobileControl;
	rdfs:comment "" .

mb:fromControl
	a owl:ObjectProperty, owl:AntisymmetricProperty;
	rdfs:domain mb:ParameterLocation;
	rdfs:range mb:MobileControl;
	rdfs:comment "" .

mb:atValue
	a owl:ObjectProperty, owl:AntisymmetricProperty;
	rdfs:domain mb:ParameterLocation;
	rdfs:range xsd:decimal;
	rdfs:comment "" .

mb:hasRange
	a owl:ObjectProperty, owl:AntisymmetricProperty;
	rdfs:domain mb:ParameterLocation;
	rdfs:range xsd:decimal;
	rdfs:comment "" .

mb:toTrack
	a owl:ObjectProperty, owl:AntisymmetricProperty;
	rdfs:domain mb:Mapping;
	rdfs:range mt:AudioTrack;
	rdfs:comment "" .

mb:toParameter
	a owl:ObjectProperty, owl:AntisymmetricProperty;
	rdfs:domain mb:Mapping;
	rdfs:range mt:AutomationParameter;
	rdfs:comment "" .

mb:hasMultiplier
	a owl:DatatypeProperty, owl:AntisymmetricProperty, owl:FunctionalProperty;
	rdfs:domain mb:DirectMapping;
	rdfs:range xsd:decimal;
	rdfs:comment "" .

mb:hasAddend
	a owl:DatatypeProperty, owl:AntisymmetricProperty, owl:FunctionalProperty;
	rdfs:domain mb:DirectMapping;
	rdfs:range xsd:decimal;
	rdfs:comment "" .

mb:hasModulus
	a owl:DatatypeProperty, owl:AntisymmetricProperty, owl:FunctionalProperty;
	rdfs:domain mb:DirectMapping;
	rdfs:range xsd:decimal;
	rdfs:comment "" .

mb:hasAudioPath
	a owl:DatatypeProperty, owl:AntisymmetricProperty, owl:InverseFunctionalProperty;
	rdfs:domain mt:AudioTrack;
	rdfs:range xsd:string;
	rdfs:comment "" .

mb:hasFeaturesPath
	a owl:DatatypeProperty, owl:AntisymmetricProperty, owl:InverseFunctionalProperty;
	rdfs:domain mt:AudioTrack;
	rdfs:range xsd:string;
	rdfs:comment "" .
